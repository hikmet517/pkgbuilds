pkgname=aspell-tr
pkgver=0.50
pkgrel=1
pkgdesc="Turkish dictionary for aspell"
arch=('x86_64')
url="http://aspell.net/"
license=('GPL')
depends=('aspell')
source=("https://ftp.gnu.org/gnu/aspell/dict/tr/$pkgname-$pkgver-0.tar.bz2")
md5sums=('432ecdc4e5233da0a4c1a52ed9103fa2')
sha256sums=('0bc6530e5eebf8b2b53f1e8add596c62099173f62b9baa6b3efaa86752bdfb4a')

build() {
  cd $pkgname-$pkgver-0
  ./configure
  make
}

package() {
  cd $pkgname-$pkgver-0
  make DESTDIR="$pkgdir" install
}
